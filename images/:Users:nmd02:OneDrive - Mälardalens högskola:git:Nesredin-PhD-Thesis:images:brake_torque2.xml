<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.
double torqueVal;
double brakeVal;
clock x;
broadcast chan brake, pedal;


</declaration>
	<template>
		<name>Gas</name>
		<location id="id0" x="-17" y="0">
			<name x="-27" y="-34">Init</name>
			<label kind="exponentialrate" x="-25" y="17">5</label>
		</location>
		<init ref="id0"/>
		<transition>
			<source ref="id0"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="34" y="-17">pedal!</label>
			<nail x="25" y="-34"/>
			<nail x="25" y="34"/>
		</transition>
	</template>
	<template>
		<name>Brake</name>
		<declaration>clock y;
clock x2;</declaration>
		<location id="id1" x="-17" y="0">
			<name x="-27" y="-34">Init</name>
			<label kind="exponentialrate" x="-25" y="17">10</label>
		</location>
		<init ref="id1"/>
		<transition>
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="34" y="-25">brake!</label>
			<label kind="assignment" x="34" y="-8">brakeVal=
10+random(100)</label>
			<nail x="25" y="-34"/>
			<nail x="25" y="34"/>
		</transition>
	</template>
	<template>
		<name>SpeedingBraking</name>
		<location id="id2" x="0" y="-25">
			<name x="-59" y="-59">LowSpeed</name>
			<label kind="exponentialrate" x="-25" y="-8">1000</label>
		</location>
		<location id="id3" x="153" y="-68">
			<name x="110" y="-119">Accelerating</name>
			<label kind="invariant" x="127" y="-102">x &lt;= 5</label>
		</location>
		<location id="id4" x="306" y="-25">
			<name x="280" y="-59">HighSpeed</name>
			<label kind="exponentialrate" x="323" y="-34">1000</label>
		</location>
		<location id="id5" x="153" y="17">
			<name x="127" y="42">Braking</name>
			<label kind="invariant" x="127" y="25">x &lt;= 5</label>
		</location>
		<init ref="id2"/>
		<transition>
			<source ref="id5"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="76" y="-34">pedal?</label>
			<nail x="127" y="-25"/>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id5"/>
			<label kind="synchronisation" x="178" y="-42">brake?</label>
			<nail x="178" y="-25"/>
		</transition>
		<transition>
			<source ref="id5"/>
			<target ref="id2"/>
			<label kind="guard" x="59" y="8">x &gt;= 5</label>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id5"/>
			<label kind="synchronisation" x="246" y="-8">brake?</label>
			<label kind="assignment" x="237" y="9">x = 0</label>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id4"/>
			<label kind="guard" x="204" y="-76">x &gt;= 5</label>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="42" y="-68">pedal?</label>
			<label kind="assignment" x="51" y="-85">x = 0</label>
		</transition>
	</template>
	<template>
		<name>Torque</name>
		<declaration>clock x3;
void calcTorque()
{
    torqueVal = brakeVal*random(1.0)*5;
}</declaration>
		<location id="id6" x="17" y="17">
			<name x="-68" y="-17">Init</name>
			<label kind="invariant" x="-8" y="25">x3&lt;=4</label>
		</location>
		<location id="id7" x="-59" y="17">
		</location>
		<init ref="id7"/>
		<transition>
			<source ref="id7"/>
			<target ref="id6"/>
			<label kind="assignment" x="-42" y="0">x3=0</label>
		</transition>
		<transition>
			<source ref="id6"/>
			<target ref="id6"/>
			<label kind="guard" x="-34" y="-25">x3&gt;=4</label>
			<label kind="assignment" x="42" y="-8">calcTorque(),
x3=0</label>
			<nail x="17" y="-25"/>
			<nail x="59" y="-25"/>
		</transition>
	</template>
	<system>// Place template instantiations here.
Vehicle = SpeedingBraking();
BrakeComp = Brake();
AccComp = Gas();
TorqueComp = Torque();
// List one or more processes to be composed into a system.
system Vehicle, BrakeComp, AccComp,TorqueComp;
    </system>
	<queries>
		<query>
			<formula>simulate[&lt;=20] { brakeVal,torqueVal }</formula>
			<comment></comment>
		</query>
		<query>
			<formula>A[] not deadlock</formula>
			<comment></comment>
		</query>
	</queries>
</nta>
